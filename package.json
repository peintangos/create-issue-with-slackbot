    "@slack/web-api": "^7.8.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vercel/node": "^5.0.0",
    "typescript": "^5.7.0",
    "vercel": "^39.0.0",
    "vitest": "^4.0.18"
  }
}
